extends assets/jade/layouts/global/index
block header
	include assets/jade/layouts/global/partials/header-menu

block content
	.content-section
		.tabs.not-shadow
			.tabs__nav
				a(href='#user').tabs__nav-item.no-wrap
					| Пользователь

				a(href='#terms-of-use').tabs__nav-item.no-wrap
					| Правила

				a(href='#chat-with-manager').tabs__nav-item.no-wrap.is-active
					| Менеджер

				a(href='#faq').tabs__nav-item.no-wrap
					| FAQ

				a(href='#settings').tabs__nav-item.no-wrap
					| Настройки

			.tab-container#user
				.tab-container__section-inner
					.section-title._no-b-indent Реквизиты клиента

					include assets/jade/partials/tables/profile-client-details

			.tab-container#terms-of-use
				.tab-container__section-inner
					.section-title._no-b-indent Правила пользования

					include assets/jade/partials/tables/profile-terms-of-use

			.tab-container#chat-with-manager.is-visible
				.tab-container__section-inner
					.section-title._tabs-indent Ваш персональный менеджер

					include assets/jade/partials/tables/profile-chat-with-manager

			.tab-container#faq
				.tab-container__section-inner
					.section-title._no-b-indent Часто задаваемые вопросы

					include assets/jade/partials/tables/profile-faq

			.tab-container#settings
				.tab-container__section-inner
					.section-title
						| Настройки

					.content-section__inner
						button.btn-primary-inverted.section-button
							| Запрос на смену регистр. данных

						include assets/jade/partials/forms/password-creating-with-phone




		//include assets/jade/partials/cards-list
		include assets/jade/partials/request-to-open-pif

		include assets/jade/partials/outgoing-link

		include assets/jade/partials/privacy-policy

	include assets/jade/partials/modal-popups/change-personal-manager

	include assets/jade/partials/modal-popups/change-personal-mananger-accepted